{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": [
      "es2022",
      "dom",
    ],
    "jsx": "react",
    /* Modules */
    "module": "es2022",
    "moduleResolution": "bundler",
    /* Emit */
    "noEmit": true,
    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  }
}
